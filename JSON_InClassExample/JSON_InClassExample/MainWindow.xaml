<Window x:Class="JSON_InClassExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_InClassExample"
        mc:Ignorable="d"
        Title="RickMorty" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://pittnews.com/wp-content/uploads/2020/05/Image-from-iOS-1-900x694.png"/>
        </Grid.Background>
        <ListBox x:Name="listcharacters" HorizontalAlignment="Left" Height="344" Margin="433,0,0,0" VerticalAlignment="Center" Width="342" OpacityMask="Black" SelectionChanged="listcharacters_SelectionChanged"/>
        <Image x:Name="imagecharacter" HorizontalAlignment="Left" Height="344" Margin="10,10,0,0" VerticalAlignment="Top" Width="322"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="62" Margin="31,343,0,0" VerticalAlignment="Top" Width="173" Click="Button_Click"/>

    </Grid>
</Window>
