<Window x:Class="JSON_Chuck_Norris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Chuck_Norris"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="windowimage">
        <Grid.Background>
            <ImageBrush ImageSource="https://img.cinemablend.com/filter:scale/quill/6/c/4/c/8/9/6c4c89bcba14f5419f8312a0efc76911dcd9a589.jpg?mw=600"/>
        </Grid.Background>
        <ComboBox x:Name="combobox" HorizontalAlignment="Left" Height="55" Margin="32,37,0,0" VerticalAlignment="Top" Width="235" />
        <Button x:Name="buttonselect" Content="Get Joke" HorizontalAlignment="Left" Height="79" Margin="32,154,0,0" VerticalAlignment="Top" Width="155" IsDefault="True" Click="buttonselect_Click"/>
        <TextBox x:Name="joketext" HorizontalAlignment="Left" Height="86" Margin="32,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="667"/>

    </Grid>
</Window>
