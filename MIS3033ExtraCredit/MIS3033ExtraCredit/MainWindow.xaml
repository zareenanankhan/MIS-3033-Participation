<Window x:Class="MIS3033ExtraCredit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIS3033ExtraCredit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="window">
        <Grid.Background>
            <ImageBrush ImageSource="https://ychef.files.bbci.co.uk/976x549/p02fc1jw.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="743*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonclick" Content="Button" HorizontalAlignment="Left" Height="58" Margin="27,356,0,0" VerticalAlignment="Top" Width="158" Grid.ColumnSpan="3" Click="buttonclick_Click"/>
        <TextBox x:Name="textquote" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="85" Margin="27,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="735" FontSize="15"/>

    </Grid>
</Window>
